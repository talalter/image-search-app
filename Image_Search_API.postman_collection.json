									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "folder_name",
									"value": "test_folder",
									"type": "text"
								},
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "text"
								},
