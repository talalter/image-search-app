version: '3.8'

services:
  # PostgreSQL Database - Foundation service
  postgres:
    image: postgres:15-alpine
    container_name: imagesearch-postgres
    environment:
      POSTGRES_DB: imagesearch
      POSTGRES_USER: imageuser
      POSTGRES_PASSWORD: imagepass123
    ports:
      - "5432:5432"
    volumes:
      - postgres-data:/var/lib/postgresql/data
    networks:
      - app-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U imageuser -d imagesearch"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    restart: unless-stopped

  # RabbitMQ Message Queue - For embedding job processing
  rabbitmq:
    image: rabbitmq:3-management-alpine
    container_name: imagesearch-rabbitmq
    environment:
      RABBITMQ_DEFAULT_USER: imageuser
      RABBITMQ_DEFAULT_PASS: imagepass123
    ports:
      - "5672:5672"   # AMQP protocol
      - "15672:15672" # Management UI
    volumes:
      - rabbitmq-data:/var/lib/rabbitmq
    networks:
      - app-network
    healthcheck:
      test: ["CMD-SHELL", "rabbitmq-diagnostics -q ping"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 30s
    restart: unless-stopped

  # Python Search Service - CLIP + FAISS for semantic search
  python-search-service:
    build:
      context: ./python-search-service
      dockerfile: Dockerfile
    container_name: imagesearch-python-search
    ports:
      - "5000:5000"
    volumes:
      # Shared volume for uploaded images (read access)
      - app-data:/app/data
    networks:
      - app-network
    environment:
      - PYTHONUNBUFFERED=1
    healthcheck:
      test: ["CMD-SHELL", "python -c 'import requests; requests.get(\"http://localhost:5000/\", timeout=5)' || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 90s
    restart: unless-stopped
    # Resource limits to prevent CLIP model from consuming too much memory
    deploy:
      resources:
        limits:
          memory: 4G
        reservations:
          memory: 2G

  # Java Backend - Spring Boot REST API
  java-backend:
    build:
      context: ./java-backend
      dockerfile: Dockerfile
    container_name: imagesearch-java-backend
    ports:
      - "8080:8080"
    volumes:
      # Shared volume for uploaded images and FAISS indexes
      - app-data:/app/data
    networks:
      - app-network
    environment:
      # Database configuration
      - SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/imagesearch
      - DB_USERNAME=imageuser
      - DB_PASSWORD=imagepass123
      # Search service configuration
      - SEARCH_SERVICE_URL=http://python-search-service:5000
      - SEARCH_BACKEND=python
      # RabbitMQ configuration
      - RABBITMQ_HOST=rabbitmq
      - RABBITMQ_PORT=5672
      - RABBITMQ_USER=imageuser
      - RABBITMQ_PASS=imagepass123
      # Storage configuration
      - STORAGE_BACKEND=local
      - IMAGES_ROOT=/app/data/uploads
      # JVM optimization
      - JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0
    depends_on:
      postgres:
        condition: service_healthy
      rabbitmq:
        condition: service_healthy
      python-search-service:
        condition: service_started
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:8080/actuator/health || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 1G
        reservations:
          memory: 512M

  # Python Embedding Worker - Processes embedding jobs from RabbitMQ
  python-embedding-worker:
    build:
      context: ./python-embedding-worker
      dockerfile: Dockerfile
    container_name: imagesearch-embedding-worker
    volumes:
      # Shared volume for uploaded images (read access)
      - app-data:/app/data
    networks:
      - app-network
    environment:
      # RabbitMQ configuration
      - RABBITMQ_HOST=rabbitmq
      - RABBITMQ_USER=imageuser
      - RABBITMQ_PASS=imagepass123
      # Search service configuration
      - SEARCH_SERVICE_URL=http://python-search-service:5000
      # Database configuration
      - DB_HOST=postgres
      - DB_NAME=imagesearch
      - DB_USERNAME=imageuser
      - DB_PASSWORD=imagepass123
      # Python configuration
      - PYTHONUNBUFFERED=1
    depends_on:
      postgres:
        condition: service_healthy
      rabbitmq:
        condition: service_healthy
      python-search-service:
        condition: service_started
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
        reservations:
          memory: 256M

  # React Frontend - Served by Nginx
  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile.frontend
      args:
        REACT_APP_BACKEND: java
    container_name: imagesearch-frontend
    ports:
      - "3000:80"
    networks:
      - app-network
    depends_on:
      - java-backend
    healthcheck:
      test: ["CMD-SHELL", "wget --quiet --tries=1 --spider http://localhost:80/ || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 30s
    restart: unless-stopped

# Named volumes for persistent data
volumes:
  postgres-data:
    driver: local
  rabbitmq-data:
    driver: local
  app-data:
    driver: local

# Custom bridge network for inter-service communication
networks:
  app-network:
    driver: bridge
