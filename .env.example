# Docker Compose Environment Variables
# Copy this file to .env and adjust values as needed

# Database Configuration
POSTGRES_DB=imagesearch
POSTGRES_USER=imageuser
POSTGRES_PASSWORD=imagepass123
POSTGRES_PORT=5432
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_MAX_CONNECTIONS=100

# RabbitMQ Configuration
RABBITMQ_USER=imageuser
RABBITMQ_PASS=imagepass123
RABBITMQ_AMQP_PORT=5672
RABBITMQ_MGMT_PORT=15672

# Service Ports
PYTHON_SEARCH_PORT=5000
JAVA_BACKEND_PORT=8080
FRONTEND_PORT=3000

# Frontend Backend Selection (java or python)
REACT_APP_BACKEND=java

# Build Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
